<!DOCTYPE html>
<html>
<head>
  <title><%= show_title(@title) %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "/javascripts/jquery1.7.2.js" %>
  <%= stylesheet_link_tag "/bootstrap/css/bootstrap.min.css " %>
  <%= javascript_include_tag "/bootstrap/js/bootstrap.min.js " %>
</head>
<body>
<div class="container" style="width:1000px">
	<div style="" class="row-fluid">
	<%= render  'user/header.html'%>
	</div>
	<div class="row-fluid" style="min-height: 560px;">
		
		 <div class="span2" well>
			<%= render "user/sidebar" %>
		</div>
		 <div class="span10" well>
			 <ul class="breadcrumb">
				  <li><a href="#">Home</a> <span class="divider">/</span></li>
				  <li><a href="#"><%= @title %></a> <span class="divider">/</span></li>
			</ul>
			<%= yield %>
		 </div>
		</div>


	<%= render  'user/footer.html'%>

</div>
</body>
</html>
