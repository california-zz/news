<h1>Edit Profile</h1>
<%= form_for @user, :url => change_path , :html => { :class => "form-horizontal", :id => "form-horizontal",:multipart => true } do |f| %>
<% if @user.errors.any? ||  !flash[:error].nil?%>
  <div class="alert alert-block alert-error fade in">
    
    <h4 class="alert-heading">There were problems with the following fields:</h4>
    <button type="button" class="close" data-toggle="button" data-dismiss="alert">×</button>
    <ul>
      <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <% else %>
    <%= flash[:error] %>
    <% end %>
    </ul>
  </div>
  <% end %>
  <% if  !flash[:success].nil? %>
  <div class="alert alert-success">
  <button type="button" class="close" data-toggle="button" data-dismiss="alert">×</button>
    <%= flash[:success] %></div>
  <% end %>
<div style="float:left;" >
  <img width="300" height="300" src="<%= @user[:note] %>" class="img-polaroid">
</div>
<div style="float:left">
  <div <%= show_error(:username) %>>
    <label class="control-label" for="inputEmail">Username </label>
    <div class="controls">
     <%= @user[:username] %>
    </div>

  </div>
   <div <%= show_error(:password_old) %>>
    <label class="control-label" for="inputPassword"> Old Password <b style="color:red;">(*)</b></label>
    <div class="controls">
     <%= password_field_tag "user[old_password]","",:placeholder =>"fill new Password" %>
  </div>
</div>
  <div <%= show_error(:password) %>>
    <label class="control-label" for="inputPassword">Password <b style="color:red;">(*)</b></label>
    <div class="controls">
     <%= password_field_tag  "user[password]","",:placeholder =>"fill Password" %>
  </div>

</div>
  <div  <%= show_error(:password_confirmation) %>>
    <label class="control-label" for="inputPassword">Password Confirm <b style="color:red;">(*)</b></label>
    <div class="controls">
    <%= password_field_tag  "user[password_confirmation]","",:placeholder =>"fill Password" %>
  </div>
</div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Update" ,:class=>"btn btn-primary"  %>
    </div>
  </div>
</div>

<% end %>

<script type="text/javascript">
      $(document).ready(function() {
        $(".alert").alert("alert alert-error");
   
      });
</script>

