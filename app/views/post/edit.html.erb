<div class="modal fade hide"  id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 <div class="modal-header">
 <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
 <h3 id="myModalLabel">Edit Article</h3>
 </div>
<div class="modal-body">
<%= form_for @detail_post, :url => article_path , :html => { :class => "form-horizontal", :id => "form-horizontal" } do |f| %>
<% if @detail_post.errors.any? %>
  <div class="alert alert-block alert-error fade in">
    
    <h4 class="alert-heading">There were problems with the following fields:</h4>
    <button type="button" class="close" data-toggle="button" data-dismiss="alert">×</button>
    <ul>
    <% @detail_post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% else %>
  <div class="alert alert-success">
  <button type="button" class="close" data-toggle="button" data-dismiss="alert">×</button>
    success</div>

  <% end %>

  <div class='control-group'>
    <label class="control-label" for="inputEmail">Title <b style="color:red;">(*)</b></label>
    <div class="controls">
     <%= f.text_field :title,:placeholde =>"fill Username",:class =>"span9" %>
    </div>

  
</div>
<div stype="clear:both;"></div> 
<div class='control-group' >
    <label class="control-label" for="inputPassword">Content  </label>
    <div class="controls">
    <%= f.text_area :content,:rows =>7,:cols=> 500,:placeholder =>"fill Address" ,:class =>"span9"  %>
  </div>
</div>

  <div class="control-group">
    <div style="margin-left:400px" class="controls">
      <%= f.submit "Post" ,:class=>"btn btn-primary"  %>
    </div>
  </div>

<% end %>
</div>
<div class="modal-footer">
<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
<button class="btn btn-primary">Save changes</button>
</div>
</div>