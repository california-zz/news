

<h1>Post Article</h1>
<%= form_for @post, :url => article_path , :html => { :class => "form-horizontal", :id => "form-horizontal" } do |f| %>
<% if @post.errors.any? %>
	<div class="alert alert-block alert-error fade in">
		
		<h4 class="alert-heading">There were problems with the following fields:</h4>
		<button type="button" class="close" data-toggle="button" data-dismiss="alert">×</button>
		<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
  <% end %>
	<% if !flash[:success].nil? %>
	<div class="alert alert-success">
	<button type="button" class="close" data-toggle="button" data-dismiss="alert">×</button>
		<%= flash[:success] %></div>

	<% end %>

  <div class='control-group'>
    <label class="control-label" for="inputEmail">Title <b style="color:red;">(*)</b></label>
    <div class="controls">
     <%= f.text_field :title,:placeholde =>"fill Username",:class =>"span9" %>
    </div>

  
</div>
<div stype="clear:both;"></div> 
<div class='control-group' >
    <label class="control-label" for="inputPassword">Content  </label>
    <div class="controls">
   	<%= f.text_area :content,:rows =>7,:cols=> 500,:placeholder =>"fill Address" ,:class =>"span9"  %>
  </div>
</div>

  <div class="control-group">
    <div style="margin-left:400px" class="controls">
      <%= f.submit "Post" ,:class=>"btn btn-primary"  %>
    </div>
  </div>

<% end %>
<script type="text/javascript">
      $(document).ready(function() {
        $(".alert").alert("alert alert-error");
	
      });
</script>
